{{ form_start(form, {attr: {class : 'filter'}}) }}
{{ form_row(form.q) }}

<h4>Categories</h4>
{{ form_row(form.categories) }}

<h4>Prix</h4>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.min) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.max) }}
    </div>
</div>
<div class="mb-2" id="priceslider" data-min="'{{ min }}" data-max="{{ max }}"></div>
{{ dump(min, max) }}
<h4>Promotion</h4>
{{ form_row(form.promo) }}

<button type="submit" class="btn btn-primary w-100">Filtrer</button>
{{ form_end(form) }}

