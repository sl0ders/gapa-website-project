{% extends 'admin/base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category    </h1>
    <div class="container-fluid">
    <table class="table" id="datatable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ category.position }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <a href="{{ path('admin_category_index') }}" class="btn btn-warning text-white"><i class="fa fa-arrow-left"></i></a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning text-white"><i class="fa fa-edit"></i></a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
