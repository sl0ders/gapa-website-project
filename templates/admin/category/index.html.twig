{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index    </h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-success float-right"><i class="fa fa-plus"></i></a>     <div class="container-fluid">
    <table class="table" id="datatable">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.position }}</td>
                <td class="d-flex justify-content-center">
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-primary text-white"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="mx-2 btn btn-warning text-white"><i class="fa fa-edit"></i></a>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun resultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('admin_category_new') }}" class="btn btn-success"><i class="fa fa-plus"></i></a>
{% endblock %}
