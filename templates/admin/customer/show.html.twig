{% extends 'admin/base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer </h1>
    <div class="container-fluid">
        <table class="table" id="datatable">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Is_add_newsletter</th>
                <td>{{ customer.isAddNewsletter ? '<i class="text-success fa fa-check"></i>' : '<i class="text-danger fa fa-times"></i>' }}</td>
            </tr>
            <tr>
                <th>Newsletter_sub_at</th>
                <td>{{ customer.newsletterSubAt ? customer.newsletterSubAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last_visit</th>
                <td>{{ customer.lastVisit ? customer.lastVisit|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ customer.note }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ customer.birthday ? customer.birthday|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('admin_customer_index') }}" class="btn btn-primary text-white"><i class="fa fa-arrow-left"></i></a>

    <a href="{{ path('admin_customer_edit', {'id': customer.id}) }}" class="btn btn-warning text-white"><i
                class="fa fa-edit"></i></a>

    {{ include('admin/customer/_delete_form.html.twig') }}
{% endblock %}
